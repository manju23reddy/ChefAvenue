<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/media_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyt_step_media_layt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/card_view_steps"
        app:cardBackgroundColor="@color/cardback"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyt_step_media_layt">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollview_stepdesc">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 1 : "
                        android:padding="5dip"
                        android:textSize="20sp"
                        android:id="@+id/txtv_stepname"
                        android:fontFamily="sans-serif-condensed"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtv_step_description"
                        android:textSize="17sp"
                        android:fontFamily="sans-serif-condensed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtv_stepname"
                        />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        app:layout_constraintTop_toBottomOf="@+id/txtv_step_description"
                        app:layout_constraintRight_toRightOf="parent"
                        android:drawableRight="@drawable/next_icon"
                        android:id="@+id/btn_next"/>


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-condensed"
                        app:layout_constraintTop_toBottomOf="@+id/txtv_step_description"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:drawableLeft="@drawable/previous_icon"
                        android:id="@+id/btn_previous"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
