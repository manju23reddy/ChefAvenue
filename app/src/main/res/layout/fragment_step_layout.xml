<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/media_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/lyt_step_media_layt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    <TextView
        android:id="@+id/txtv_stepid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:text="@string/steps"
        android:textSize="20sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        />

    <TextView
        android:id="@+id/txtv_stepsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@+id/txtv_stepid" />

    <ScrollView
        android:id="@+id/scrollview_stepdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_stepsd"
        >

            <TextView
                android:id="@+id/txtv_step_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtv_stepsd" />

    </ScrollView>


    <TextView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/next_icon"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/next_step"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


    <TextView
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/previous_icon"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/previous_step"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />
    </RelativeLayout>


</LinearLayout>
